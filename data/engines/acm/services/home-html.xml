<service>
    <request> <!-- Specifies how to retrieve/access service -->
        <url>http://dl.acm.org/</url>
        <method>GET</method> <!-- HTTP Method: GET, POST, etc. -->
    </request>
    <response contentType="text/html">

        <!-- this contentType searches in returned cookies; mode="text" in that case means cookie value. -->
        <session contentType="application/x-www-response-cookies">
            <cfid el="CFID" mode="text" />
            <cftoken el="CFTOKEN" mode="text" />
        </session>

    </response>

